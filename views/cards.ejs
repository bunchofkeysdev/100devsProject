<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>cards</h1>
    <ul>
        <% cards.forEach( el=> { %>
            <li class='cardItem' data-id='<%=el._id%>'>
                <span >
                    <%= el.front %>
                </span>
                <br>
                <span class=' <%= el.completed === false ? 'completed' : 'not'%>'> 
                    <%= el.back %>
                </span>
                <br>
                <span class=' <%= el.completed === true ? 'not' : 'not'%>'>
                    show answer 
                </span>
                <br>
                <span class='del'> Delete </span>
            </li>
            <% }) %>
        </ul>


    <form action="/cards/createCard" method='POST'>
        <input type="text" placeholder="Front of Card" name='frontOfCard'>
        <input type="text" placeholder="Back of Card" name='backOfCard'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>